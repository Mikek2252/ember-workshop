<form onsubmit={{action "createComment"}}>
  <div class="form-group">
    <label for="rating-select">Rating</label>
    <select
      class="form-control"
      id="rating-select"
      onchange={{action "ratingChanged"}}
      onblur={{action (mut ratingInputUsed) true }}
      data-test-new-comment-rating-input>
      <option></option>
      {{#each ratingOptions as |rating|}}
        <option value={{rating.value}} selected={{rating.selected}}>{{rating.label}}</option>
      {{/each}}
    </select>
    {{#if showRatingValidation }}
      <p data-test="new-comment__rating-validation">
        {{v-get this "rating" "message"}}
      </p>
    {{/if}}
  </div>
  <div class="form-group">
    <label for="text-input">Text</label>
    <input type="text" class="form-control"
      id="text-input"
      rows="3"
      onkeyup={{action "textChanged"}}
      value={{text}}
      onblur={{action (mut messageInputUsed) true }}
      data-test-new-comment-text-input>
    {{#if showMessageValidation }}
      <p data-test="new-comment__message-validation">
        {{v-get this "text" "message"}}
      </p>
    {{/if}}
  </div>
  <button type="submit" class="btn btn-primary" data-test-new-comment-submit>Save</button>
</form>
